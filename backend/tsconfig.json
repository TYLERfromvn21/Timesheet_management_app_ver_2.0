{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Quan trọng: Chuyển về CommonJS để ts-node chạy mượt
    "module": "commonjs",
    "target": "es2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    // Quan trọng: Khai báo types node để hiểu 'process'
    "types": ["node"]
  },
  "include": ["src/**/*", "prisma/**/*"],
  "exclude": ["node_modules", "dist"]
}